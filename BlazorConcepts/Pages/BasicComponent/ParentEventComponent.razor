<h3>ParentEventComponent</h3>

<ChildEventComponent ChildClick="StuffHappened" MouseClick="MouseStuff" InputCallback="InputStuff"></ChildEventComponent>
<div>
    @Counter
</div>
<div>
    @MouseJunk
</div>
<div>
    @ChangeJunk
</div>

@code {

    public int Counter { get; set; }

    public string MouseJunk { get; set; }

    public string ChangeJunk { get; set; }

    public void StuffHappened()
    {
        Counter++;
    }

    public void MouseStuff(MouseEventArgs e)
    {
        MouseJunk = $"X: {e.ClientX} Y: {e.ClientY}";
    }

    public void InputStuff(ChangeEventArgs e)
    {
        ChangeJunk = (string)e.Value;
    }
}
