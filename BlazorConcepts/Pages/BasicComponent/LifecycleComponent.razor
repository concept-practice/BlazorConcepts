<h3>LifecycleComponent</h3>

@code {
    public override Task SetParametersAsync(ParameterView parameters)
    {
        //After component creation, this is the first function called. 
        return base.SetParametersAsync(parameters);
    }

    protected override Task OnInitializedAsync()
    {
        //Called when parameters have been set. Child components are initialized after.
        return base.OnInitializedAsync();
    }

    protected override Task OnParametersSetAsync()
    {
        //Potentially called repeatedly, fire after state change, causes a render tree diff.
        return base.OnParametersSetAsync();
    }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        //Executed every time Blazor has regenerated the rendertree. 
        return base.OnAfterRenderAsync(firstRender);

        //This is called if you call.
        StateHasChanged();
    }
}
